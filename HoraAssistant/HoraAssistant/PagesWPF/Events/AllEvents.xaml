<Page x:Class="HoraAssistant.AllEvents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HoraAssistant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllEvents">
	<Page.Resources>
		<Style x:Name="MainStyle" x:Key="MainStyle">
			<Setter Property="Control.Background" Value="White" />
			<Setter Property="Control.Foreground" Value="DarkGreen" />
			<Setter Property="Control.FontSize" Value="20" />
			<Setter Property="Control.FontWeight" Value="Bold" />
		</Style>
	</Page.Resources>
	<Grid Background="DarkGreen">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*"/>
			<ColumnDefinition Width="0.005*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel x:Name="MainStackEvents" Grid.Column="0" Style="{StaticResource MainStyle}"/>
		<StackPanel x:Name="InfoStackEvents" Grid.Column="2" Style="{StaticResource MainStyle}"/>
	</Grid>
</Page>
